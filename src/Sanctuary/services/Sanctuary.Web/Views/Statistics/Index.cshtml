<div class="page-inner">
    <h3 class="fw-bold mb-3">Statistics Management</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Actions</div>
                </div>
                <div class="card-body">
                    <button id="btn-stats-add" class="btn btn-lg btn-success" style="margin:10px"><i class="fa fa-plus"></i> Add </button>
                    <button id="btn-patient-remove" class="btn btn-lg btn-danger" style="margin:10px"><i class="fa fa-window-close"> </i> Remove </button>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Statistics Job</div>
                </div>
                <div class="card-body">
                    <table id="stats-jobs-table">
                        <thead>
                            <tr>
                                <th data-field="Id" data-formatter="Page.detailsFormater"></th>
                                <th data-field="description">Description</th>
                                <th data-field="options.statsJobType.jobTypeStr">Job Type</th>
                                <th data-formatter="Page.patientCount">Total Patient</th>
                                <th data-formatter="Page.fileCount">File Count</th>
                                <th data-formatter="Page.endpointCount">Endpoint Count</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="statistics-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div id="modal-container" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/views/statistics/index.js"></script>
}
