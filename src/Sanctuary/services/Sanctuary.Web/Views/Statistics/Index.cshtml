<div class="page-inner">
    <h3 class="fw-bold mb-3">Statistics Management</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Actions</div>
                </div>
                <div class="card-body" style="margin:auto">
                    <button id="btn-stats-add" class="btn btn-lg btn-success" style="margin:10px"><i class="fa fa-plus"></i> Add </button>
                    <button id="btn-patient-remove" class="btn btn-lg btn-danger" style="margin:10px"><i class="fa fa-window-close"> </i> Remove </button>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Statistics Job</div>
                </div>
                <div class="card-body">
                    <table id="stats-jobs-table">
                        <thead>
                            <tr>
                                <th data-field="Id" data-formatter="Page.detailsFormater"></th>
                                <th data-field="patientId">Created Date</th>
                                <th data-field="site">Processing Time</th>
                                <th data-field="isActive">Patient Count</th>
                                <th data-field="dataRangeStart">Data Start</th>
                                <th data-field="dataRangeEnd">Data End</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/views/statistics/index.js"></script>
}
